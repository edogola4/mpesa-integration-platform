# Server Configuration
NODE_ENV=development
PORT=5000
SERVER_URL=http://localhost:5000
CLIENT_URL=http://localhost:3000

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/mpesa_platform
MONGODB_TEST_URI=mongodb://localhost:27017/mpesa_platform_test

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRATION=7d
JWT_REFRESH_EXPIRATION=30d

# Email Configuration
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=your_email@example.com
EMAIL_PASSWORD=your_email_password
EMAIL_FROM=noreply@mpesa-platform.com

# M-Pesa API Configuration - Kenya
MPESA_KE_ENVIRONMENT=sandbox
MPESA_KE_CONSUMER_KEY=your_consumer_key
MPESA_KE_CONSUMER_SECRET=your_consumer_secret
MPESA_KE_SHORTCODE=your_shortcode
MPESA_KE_PASSKEY=your_passkey
MPESA_KE_CALLBACK_URL=https://your-callback-url.com/api/webhooks/mpesa/kenya

# M-Pesa API Configuration - Tanzania
MPESA_TZ_ENVIRONMENT=sandbox
MPESA_TZ_API_KEY=your_api_key
MPESA_TZ_PUBLIC_KEY=your_public_key
MPESA_TZ_SERVICE_PROVIDER_CODE=your_provider_code
MPESA_TZ_CALLBACK_URL=https://your-callback-url.com/api/webhooks/mpesa/tanzania

# Security Configuration
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
ENCRYPTION_KEY=your_encryption_key_for_sensitive_data

# Logging Configuration
LOG_LEVEL=debug
LOG_FILE_PATH=logs/app.log

# Two-Factor Authentication
TWO_FACTOR_APP_NAME=MPesaPlatform

# Sandbox Test Account
TEST_PHONE_NUMBER=254712345678